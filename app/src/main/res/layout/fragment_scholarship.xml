<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScholarshipTabActivity">

    <!-- 상단바 (알람, 좋아요) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/like"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:padding="5dp"
            android:src="@drawable/like" />

        <ImageView
            android:id="@+id/alarm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:padding="5dp"
            android:src="@drawable/alarm" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/scholarTitle"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#A0ACE0"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="입력하신 정보로 장학금을 \n최대 n건 받을 수 있습니다."
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/myScholarBt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintTop_toBottomOf="@id/scholarTitle"
        android:text="내 장학금"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/koreaScholarBt"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/scholarTitle"
        android:text="전체 장학금"
        app:layout_constraintLeft_toRightOf="@+id/myScholarBt"/>

    <FrameLayout
        android:id="@+id/scholarFram"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/myScholarBt"
        app:layout_constraintBottom_toBottomOf="parent">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>